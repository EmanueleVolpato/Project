<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="backgroundcolor">#fcfcfcfc</item>
        <item name="cardbackground">#ffffff</item>
        <item name="textcolor" >#000000</item>
        <item name="tintcolor" >#000000</item>
        <item name="buttoncolor" >#2196F3</item>

    </style>


    <style name="darktheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="backgroundcolor">#303030</item>
        <item name="cardbackground">#42424242</item>
        <item name="textcolor" >#ffffff</item>
        <item name="tintcolor" >#ffffff</item>
        <item name="buttoncolor" >#2196F3</item>

    </style>



    <style name="LogoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>
</resources>
