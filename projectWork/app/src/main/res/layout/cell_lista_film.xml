<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="398dp"
        android:layout_height="251dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/relativeLayoutImage1"
            android:layout_width="194dp"
            android:layout_height="239dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            app:layout_constraintWidth_percent="0.5">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="147dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                app:layout_constraintWidth_percent="0.5"
                app:srcCompat="@drawable/martian" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutImage2"
            android:layout_width="194dp"
            android:layout_height="239dp"
            android:layout_marginTop="1dp"
            app:layout_constraintWidth_percent="0.5">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="141dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="37dp"
                android:layout_marginLeft="37dp"
                app:layout_constraintWidth_percent="0.5"
                app:srcCompat="@drawable/dolittle" />

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewStar2"
        android:layout_width="164dp"
        android:layout_height="25dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/imageViewStar1"
        android:layout_width="201dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/star" />

    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="38dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewStar1"></LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>