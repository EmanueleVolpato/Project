<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayoutImage1"
        android:layout_width="194dp"
        android:layout_height="239dp"
        android:layout_marginTop="1dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="147dp"
            android:layout_height="241dp"
            android:layout_alignParentEnd="true"
            app:layout_constraintWidth_percent="0.5"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            app:srcCompat="@drawable/dolittle" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutImage2"
        android:layout_width="194dp"
        android:layout_height="239dp"
        android:layout_marginTop="1dp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="147dp"
            android:layout_height="241dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/martian" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="418dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayoutImage1">

        <ImageView
            android:id="@+id/imageViewStar1"
            android:layout_width="430dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            app:layout_constraintWidth_percent="0.5"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/imageViewStar2"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_weight="1"
            app:layout_constraintWidth_percent="0.5"
            app:srcCompat="@drawable/star" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>