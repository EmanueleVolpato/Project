<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageFilm"
        android:layout_width="164dp"
        android:layout_height="217dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:background="#2d2d2d"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageFilm2"
        android:layout_width="164dp"
        android:layout_height="217dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:background="#2d2d2d"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titoloFilm2"
        android:layout_width="164dp"
        android:layout_height="20dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:text="titolo film"
        android:textColor="#ffff"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageFilm2"></TextView>

    <ImageView
        android:id="@+id/stella2"
        android:layout_width="164dp"
        android:layout_height="20dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/star" />

    <TextView
        android:id="@+id/titoloFilm"
        android:layout_width="164dp"
        android:layout_height="20dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="216dp"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:text="titolo film"
        android:textColor="#ffff"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <ImageView
        android:id="@+id/stella"
        android:layout_width="164dp"
        android:layout_height="20dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="240dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/star" />


</androidx.constraintlayout.widget.ConstraintLayout>