<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projectwork">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="FILM+"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.DettaglioFilm"></activity>
        <activity android:name=".activity.ListaFilmPreferiti" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="http"
                    android:host="filmvolpatojabraoui.com"
                    android:pathPattern="/film" />
            </intent-filter>
        </activity>

        <provider
            android:name=".localDatabase.FilmProvider"
            android:authorities="com.example.projectwork.localDatabase.localDatabase.FilmProvider" />

    </application>

</manifest>